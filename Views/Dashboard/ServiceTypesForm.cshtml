@model CarRepairScheduling.Models.Wrapper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add a Service Type</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <form asp-action="CreateServiceType" asp-controller="Home" method="post">
            <div class="form-group row">
                <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="ServiceType.Name"></span>
                <label asp-for="ServiceType.Name" class="col-sm-4"></label>
                <input asp-for="ServiceType.Name" class="col-sm-8 form-control">
            </div>
            <div class="form-group row">
                <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="ServiceType.Price"></span>
                <label asp-for="ServiceType.Price" class="col-sm-4"></label>
                <input asp-for="ServiceType.Price" class="col-sm-8 form-control">
            </div>
            <div class="form-group row">
                <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="ServiceType.Duration"></span>
                <label asp-for="ServiceType.Duration" class="col-sm-4"></label>
                <input asp-for="ServiceType.Duration" class="col-sm-8 form-control">
            </div>
            <div class="form-group row">
                <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="ServiceType.Active"></span>
                <label asp-for="ServiceType.Active" class="col-sm-4"></label>
                <select asp-for="ServiceType.Active" class="col-sm-8 form-control">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
            </div>
            <div class="form-group row">
                <input type="submit" value="Create" class="col-sm-4 offset-sm-4 btn btn-primary">
            </div>
        </form>
    </div>
</body>
</html>