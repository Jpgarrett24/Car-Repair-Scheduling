@model Wrapper
<!DOCTYPE html>
<html lang="en">  
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Dojo Car Service</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css"/>

</head>
<body>
        <div class="container">
            <div class="col-sm-12 text-center">
                <h2> Welcome to the Dojo Car Service</h2>
            </div>
        <main class="container d-flex flex-row justify-content-space-between">
            
        <img src=~/images/images.png alt="car repair" >
        <section class="container-fluid">
            <h5>Register</h5>
            <div class="col-sm">
            <form class="container" asp-action="Register" asp-controller="LoginReg" method="POST">
                <div class="form-group row">
                    <span asp-validation-for="User.FirstName" class="error"></span>
                    <label asp-for="User.FirstName" class="col-sm-4"></label>
                    <input asp-for="User.FirstName" class="col-sm-8 form-control">
                </div>
                <div class="form-group row">
                <span asp-validation-for="User.LastName" class="error"></span>
                <label asp-for="User.LastName" class="col-sm-4"></label>
                <input asp-for="User.LastName" class="col-sm-8 form-control">
                </div>
                <div class="form-group row">
                <span asp-validation-for="User.Email" class="error"></span>
                <label asp-for="User.Email" class="col-sm-4"></label>
                <input asp-for="User.Email" class="col-sm-8 form-control">
                </div>
                <div class="form-group row">
                <span asp-validation-for="User.Password" class="error"></span>
                <label asp-for="User.Password" class="col-sm-4"></label>
                <input asp-for="User.Password" class="col-sm-8 form-control">
                </div>
                <div class="form-group row">
                <span asp-validation-for="User.Confirm" class="error"></span>
                <label asp-for="User.Confirm" class="col-sm-4"></label>
                <input asp-for="User.Confirm" class="col-sm-8 form-control">
                </div>
                <div class="form-group row">
                <input type="submit" value="Register " class="col-sm-4 offset-sm-4 btn btn-primary">
                </div> 
            </form>
            </div>
        </section>

        <section class="container"> 
            <h5>Login</h5>
            <div class="col-sm">
            <form class="container" asp-action="Login" asp-controller="LoginReg" method="POST">
                <div class="form-group row">
                <span class="col-sm-8 offset-sm-5 text-danger" asp-validation-for="LoginUser.LoginEmail"></span>
                <span class="col-sm-8 offset-sm-5 text-danger" asp-validation-for="LoginUser.LoginPassword"></span>
                </div>
                <div class="form-group row">
                <label asp-for="LoginUser.LoginEmail" class="col-sm-4"></label>
                <input asp-for="LoginUser.LoginEmail" class="col-sm-8 form-control">
                </div>
                <div class="form-group row">
                <label asp-for="LoginUser.LoginPassword" class="col-sm-4"></label>
                <input asp-for="LoginUser.LoginPassword"class="col-sm-8 form-control" >
                </div>
                <input type="submit" value="Log In " class="col-sm-4 offset-sm-4 btn btn-primary">
            </form>
            </div>
        </section>
    </main>
    </div>
</body>
</html>